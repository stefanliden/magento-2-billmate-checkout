<?xml version="1.0"?>
<page layout="1column" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:noNamespaceSchemaLocation="urn:magento:framework:View/Layout/etc/page_configuration.xsd">
	<head>
		<css src="Billmate_BillmateCheckout/css/checkout.css"/>
	</head> 
	<body>
		<referenceContainer name="checkout.root" remove="true">
		</referenceContainer>
		<referenceContainer name="page.wrapper">
			<container name="bm-cart" htmlTag="div" htmlClass="bm-cart-wrapper" after="main">
				<block class="Billmate\BillmateCheckout\Block\Cart" cacheable="true" name="billmatecart" template="cart.phtml" before="main" after="header-wrapper" />
			</container>
			<container name="bm-checkout" htmlTag="div" htmlClass="bm-checkout-wrapper" after="bm-cart">
				<block class="Billmate\BillmateCheckout\Block\Checkout" name="billmatecheckout" template="checkout.phtml" after="bm-cart"/>
			</container>
		</referenceContainer>
	</body>
</page>
